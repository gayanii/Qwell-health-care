<Window x:Class="QWellApp.Views.Pages.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QWellApp.Views.Pages"
        xmlns:uc="clr-namespace:QWellApp.UserControls"
        xmlns:viewModel="clr-namespace:QWellApp.ViewModels"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d" Height="700" Width="700"
        Title="QWell"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.DataContext>
        <viewModel:LoginViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsLoginViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>

    <Border CornerRadius="10"                    
     BorderThickness="1">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="{StaticResource winBorderColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource winBorderColor2}" Offset="0.5"/>
                <GradientStop Color="{StaticResource winBorderColor3}" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>
            <Border CornerRadius="10"
        Grid.Column="1"
        Background="#fff">
                <Grid>
                    <Grid.RowDefinitions>
                        <!--Control bar-->
                        <RowDefinition Height="25" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--<Grid.Background>
                        <ImageBrush ImageSource="Assets/Images/Email.png"/>
                    </Grid.Background>-->

                    <!--Control bar-->
                    <StackPanel x:Name="pnlControlBar"
                        Grid.Row="0"
                        Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                        Background="Transparent"
                        Margin="0,0,5,0"
                        MouseLeftButtonDown="pnlControlBar_MouseLeftButtonDown"
                        MouseEnter="pnlControlBar_MouseEnter">
                        <Button x:Name="btnClose"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color4}"
                            Click="btnClose_Click">
                            <fa:IconImage Icon="Xmark" Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button x:Name="btnMaximize"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color6}"
                            Click="btnMaximize_Click">
                            <fa:IconImage Icon="Square" Style="{StaticResource controlButtonIcon}" />
                        </Button>
                        <Button x:Name="btnMinimize"
                            Style="{StaticResource controlButton}"
                            Tag="{StaticResource color8}"
                            Click="btnMinimize_Click">
                            <fa:IconImage Icon="WindowMinimize" Width="12" Style="{StaticResource controlButtonIcon}" />
                        </Button>
                    </StackPanel>
                    
                    <!--Login fields-->
                    <Border Grid.Row="1" CornerRadius="10" Background="{StaticResource color8}" Margin="80 80">
                        <StackPanel VerticalAlignment="Center" >

                            <TextBlock Text="Sign In" Foreground="{StaticResource color16}" Margin="30 30 50 50" Style="{StaticResource TitleText}" />

                            <Grid Margin="100 9" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Username" Style="{StaticResource textHint}" HorizontalAlignment="Left" FontWeight="Bold"/>
                                <TextBox Grid.Column="0" Grid.Row="1" Name="txtUsername" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="10" Width="300" Style="{StaticResource normalTextBox}" />

                            </Grid>

                            <Grid Margin="100 9" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" x:Name="txtPassword" MouseDown="textPassword_MouseDown" Text="Password" Style="{StaticResource textHint}" FontWeight="Bold"/>
                                <uc:PasswordUserControl Grid.Column="0" Grid.Row="1" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="-90 10" Width="500"/>
                                <TextBlock Grid.Column="0" Grid.Row="2" Text="{Binding ErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="12" Foreground="red" Style="{StaticResource textHint}" />
                                <!-- Loading Indicator -->
                                <Grid Name="loadingGrid" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Center" Background="Transparent" Opacity="0.7">
                                    <ProgressBar HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Height="10" IsIndeterminate="True" Foreground="{StaticResource color16}" />
                                    <TextBlock Text="Loading..." HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 25 0 0"/>

                                    <Grid.Visibility>
                                        <Binding Path="LoadingGridVisibility" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
                                    </Grid.Visibility>
                                </Grid>
                            </Grid>

                            <Button Content="Sign In" Command="{Binding LoginCommand}" Click="LoginBtnClicked" Margin="30 30 50 50" Style="{StaticResource mainButton}">
                                <Button.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
                                </Button.InputBindings>
                            </Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
