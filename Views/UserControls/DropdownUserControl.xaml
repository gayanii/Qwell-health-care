<UserControl x:Class="QWellApp.UserControls.DropdownUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QWellApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="dropdownUserControl">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="MyBoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>

        <!--<ComboBox Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686" IsHitTestVisible="False" Panel.ZIndex="1"
            Visibility="{Binding Converter={StaticResource MyBoolToVisibilityConverter}}">
            <ComboBoxItem Content = "Item #1"/>
        </ComboBox>
        <ComboBox Name="ComboBox" />-->

        <ComboBox Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686"
            x:Name="myOptions" ItemsSource="{Binding ElementName=dropdownUserControl, Path=ArrayItemsSource}"
            Visibility="{Binding ElementName=ComboBox, Converter={StaticResource MyBoolToVisibilityConverter}}" />
    </Grid>
</UserControl>
