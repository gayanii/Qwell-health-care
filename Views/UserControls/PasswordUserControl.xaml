<UserControl x:Class="QWellApp.UserControls.PasswordUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QWellApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="passwordUserControl">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="MyBoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <PasswordBox x:Name="txtPassword" Margin="10 0" VerticalAlignment="Center" Foreground="#868686"
           Visibility="{Binding ElementName=PasswordBox, Converter={StaticResource MyBoolToVisibilityConverter}}" />
    </Grid>
</UserControl>
