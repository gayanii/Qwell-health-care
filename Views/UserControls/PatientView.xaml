<UserControl x:Class="QWellApp.Views.UserControls.PatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QWellApp.Views.UserControls"
             xmlns:uc="clr-namespace:QWellApp.UserControls"
             xmlns:viewModel="clr-namespace:QWellApp.ViewModels"
             xmlns:converter="clr-namespace:QWellApp.Helpers"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             MouseDown="Window_MouseDown"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:PatientViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:StringToBoolConverter x:Key="StringToBoolConverter" />
    </UserControl.Resources>
    
    <Grid>
        <Grid x:Name="PatientListView">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    Grid.Column="0">
                    <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="{StaticResource color12}"/>
                    <TextBox 
                        x:Name="SearchBox"
                        Text="{Binding SearchWord, UpdateSourceTrigger=PropertyChanged}"
                        FontSize="13"
                        Height="36"
                        Width="300"
                        Background="Transparent"
                         FontWeight="Medium"
                         FontFamily="Montserrat"                            
                         Foreground="{StaticResource color12}"
                         CaretBrush="{StaticResource color12}"
                         BorderBrush="{StaticResource color12}"
                         BorderThickness="0,0,0,2"                             
                         VerticalContentAlignment="Center"
                         Margin="5,5,0,0"></TextBox>
                </StackPanel>
                <!--<Button Grid.Column="1"
                    Style="{StaticResource commandButton}"
                    Command="{Binding LoadSearchResults}" 
                    Content="Search"
                    Tag="{StaticResource color6}">
                </Button>-->
                <Button Grid.Column="2"
                    Style="{StaticResource commandButton}"
                    Content="Update"
                    Tag="{StaticResource color16}"
                    Command="{Binding GetPatientDetails}"
                    Click="UpdateButtonClicked">
                    <Button.Visibility>
                        <Binding Path="UpdateButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                    </Button.Visibility>
                </Button>
                <Button Grid.Column="3"
                    Style="{StaticResource commandButton}"
                    Content="Create New"
                    Tag="{StaticResource color2}"
                    Click="CreateButtonClicked">
                    <Button.Visibility>
                        <Binding Path="CreateButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                    </Button.Visibility>
                </Button>
                <Button Grid.Column="4"
                    Style="{StaticResource commandButton}"
                    Content="Delete"
                    Tag="{StaticResource color4}"
                    Click="DeleteButtonClicked">
                    <Button.Visibility>
                        <Binding Path="DeleteButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                    </Button.Visibility>
                </Button>
            </Grid>
            <Border Grid.Row="1"
                Background="{StaticResource panelActiveColor}"
                CornerRadius="10" 
                Padding="5"
                Margin="0 10">
                <DataGrid
                      Name="PatientGrid"
                      CanUserAddRows="False"
                      Style="{StaticResource tableGrid}"
                      ItemsSource="{Binding PatientList}"
                      IsReadOnly="true"
                      SelectionMode="Single"
                      SelectionChanged="rowChanged"
                      AutoGenerateColumns="True" 
                      MouseDoubleClick="ViewDetails">
                </DataGrid>
            </Border>
            <Grid Grid.Row="1">
                <TextBlock x:Name="NoResult" Margin="100" HorizontalAlignment="Center" Text="No Results Found!" Visibility="{Binding NoResults}"/>
            </Grid>
            <!-- Delete Popup -->
            <Popup Grid.Row="1" Name="deleteConfirmationPopup" IsOpen="False" Placement="Center" AllowsTransparency="True">
                <Border BorderBrush="{StaticResource color19}" CornerRadius="10" BorderThickness="2" Background="{StaticResource color11}" Padding="40 20">
                    <StackPanel>
                        <TextBlock x:Name="DeletePopupText" Text="" Style="{StaticResource NormalText}" HorizontalAlignment="Center" Margin="10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="No" Width="80" Margin="5" Style="{StaticResource buttonMainRed}" Click="NoButton_Click"/>
                            <Button Content="Yes" Width="80" Margin="5" Style="{StaticResource buttonMainGreen}" Click="YesButton_Click" Command="{Binding DeleteCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>

        <!--Update View-->
        <Grid x:Name="updateView">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.Visibility>
                <Binding Path="UpdateGridVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
            </Grid.Visibility>


            <!--Left Section-->
            <Border Background="{StaticResource color8}" Padding="10" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0" Margin="-80 -125">
                        <Button Style="{StaticResource iconButton}" Tag="{StaticResource color18}" Command="{Binding BackToListCommand}">
                            <fa:IconImage Icon="ArrowLeft" Height="30" Width="25" Style="{StaticResource iconButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Row="0" Text="First Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="30 0 0 10" Text="{Binding FirstNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="Last Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Margin="30 0 0 10" Text="{Binding LastNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Mobile Number *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Margin="20 0 0 10" Text="{Binding MobileNumErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="Telephone" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Status" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="FirstName" Grid.Column="1" Grid.Row="0" Hint="Enter first name" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="LastName" Grid.Column="1" Grid.Row="2" Hint="Enter last name" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="MobileNum" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox" Hint="Enter mobile number" Text="{Binding Mobile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="Telephone" Grid.Column="1" Grid.Row="6" PreviewTextInput="NumberValidationTextBox" Hint="Enter landline number" Text="{Binding Telephone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ComboBox x:Name="Status" Grid.Column="1" Grid.Row="8" ItemsSource="{Binding StatusList}" Text="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686"/>

                </Grid>
            </Border>

            <!--Right Section-->
            <Border Grid.Column="1" Padding="10" Margin="0" Background="{StaticResource color8}" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Gender *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="60 0 0 10" Text="{Binding GenderErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="NIC *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Margin="70 0 0 10" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Age *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Margin="70 0 0 10" Text="{Binding AgeErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="AllergicHistory" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Weight (kg)" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="NIC" Grid.Column="1" Grid.Row="2" Hint="Enter NIC" IsTabStop="False" Text="{Binding NIC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="Age" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox" Hint="Enter Age" IsTabStop="False" Text="{Binding Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="AllergicHistory" Grid.Column="1" Grid.Row="6" Hint="Enter allergic history" Text="{Binding AllergicHistory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="Weight" Grid.Column="1" Grid.Row="8" Hint="Enter weight" Text="{Binding Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Orientation="Horizontal" Width="160" Grid.Column="1" Grid.Row="0" Margin="0 10">
                        <RadioButton x:Name="Male" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Male}" Margin="5" Content="Male" />
                        <RadioButton x:Name="Female" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender,  Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Female}" Margin="5" Content="Female" />
                    </StackPanel>

                    <Grid Grid.Column="1" Grid.Row="10" Margin="0 40 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Style="{StaticResource cancelButton}" Command="{Binding ResetCommand}" Margin="0 0 10 0" Content="Reset" />
                        <Button Grid.Column="1" Style="{StaticResource mainButton}" Width="120" Margin="10 0 0 0" Content="Update" Command="{Binding UpdatePatientCommand}"/>

                        <Grid.Visibility>
                            <Binding Path="ResetUpdateButtonsVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                        </Grid.Visibility>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!--Create View-->
        <Grid x:Name="createView">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.Visibility>
                <Binding Path="CreateGridVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
            </Grid.Visibility>

            <!--Left Section-->
            <Border Background="{StaticResource color8}" Padding="10" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0" Margin="-80 -155">
                        <Button Style="{StaticResource iconButton}" Tag="{StaticResource color18}" Command="{Binding BackToListCommand}">
                            <fa:IconImage Icon="ArrowLeft" Height="30" Width="25" Style="{StaticResource iconButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Row="0" Text="First Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="30 0 0 10" Text="{Binding FirstNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="Last Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Margin="30 0 0 10" Text="{Binding LastNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Mobile Number *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Margin="20 0 0 10" Text="{Binding MobileNumErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="Telephone" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="FirstNameCreate" Grid.Column="1" Grid.Row="0" Hint="Enter first name" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="LastNameCreate" Grid.Column="1" Grid.Row="2" Hint="Enter last name" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="MobileNumCreate" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox" Hint="Enter mobile number" Text="{Binding Mobile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="TelephoneCreate" Grid.Column="1" Grid.Row="6" PreviewTextInput="NumberValidationTextBox"  Hint="Enter landline number" Text="{Binding Telephone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                </Grid>
            </Border>

            <!--Right Section-->
            <Border Grid.Column="1" Padding="10" Background="{StaticResource color8}" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Gender *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="60 0 0 10" Text="{Binding GenderErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="NIC *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Margin="70 0 0 10" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Age *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Margin="70 0 0 10" Text="{Binding AgeErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="AllergicHistory" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Weight (kg)" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="NICCreate" Grid.Column="1" Grid.Row="2" Hint="Enter NIC" IsTabStop="False" Text="{Binding NIC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="AgeCreate" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox" Hint="Enter Age" IsTabStop="False" Text="{Binding Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="AllergicHistoryCreate" Grid.Column="1" Grid.Row="6" Hint="Enter allergic history" Text="{Binding AllergicHistory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="WeightCreate" Grid.Column="1" Grid.Row="8" Hint="Enter weight" Text="{Binding Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Orientation="Horizontal" Width="160" Grid.Column="1" Grid.Row="0" Margin="0 10">
                        <RadioButton x:Name="MaleCreate" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Male}" Margin="5" Content="Male" />
                        <RadioButton x:Name="FemaleCreate" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender,  Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Female}" Margin="5" Content="Female" />
                    </StackPanel>

                    <Grid Grid.Column="1" Grid.Row="10" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Style="{StaticResource cancelButton}" Command="{Binding CancelCommand}" Margin="0 0 10 0" Content="Cancel" />
                        <Button Grid.Column="1" Style="{StaticResource mainButton}" Width="120" Margin="10 0 0 0" Content="Create" Command="{Binding CreatePatientCommand}"/>
                    </Grid>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
