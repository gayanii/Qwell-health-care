<UserControl x:Class="QWellApp.Views.UserControls.MedicalSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QWellApp.Views.UserControls"
             xmlns:uc="clr-namespace:QWellApp.UserControls"
             xmlns:viewModel="clr-namespace:QWellApp.ViewModels"
             xmlns:converter="clr-namespace:QWellApp.Helpers"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             MouseDown="Window_MouseDown"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewModel:MedicalSummaryViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:StringToBoolConverter x:Key="StringToBoolConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid x:Name="MedicalSummaryListView">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Margin="0 0 0 0" Text="Start Date: " Style="{StaticResource text}"/>
                <DatePicker Name="StartDate" Grid.Column="1" Width="120"  Grid.Row="0" Foreground="Black" SelectedDate="{Binding StartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource datePickerStyle}"/>
                <ComboBox x:Name="StartTime" Grid.Column="2" Grid.Row="10" ItemsSource="{Binding TimeframeList}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectionChanged="StartTimeCombo_SelectionChanged" SelectedValue="{Binding StartTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,10,0" Width="140" VerticalAlignment="Center" Foreground="#868686" />
                <TextBlock Grid.Column="3" Grid.Row="0" Margin="0 0 0 0" Text="End Date: " Style="{StaticResource text}"/>
                <DatePicker Name="EndDate" Grid.Column="4" Width="120"  Grid.Row="0" Foreground="Black" SelectedDate="{Binding EndDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource datePickerStyle}"/>
                <ComboBox x:Name="EndTime" Grid.Column="5" Grid.Row="10" ItemsSource="{Binding TimeframeList}" DisplayMemberPath="Value" SelectedValuePath="Key" SelectionChanged="EndTimeCombo_SelectionChanged" SelectedValue="{Binding EndTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,0" Width="140" VerticalAlignment="Center" Foreground="#868686" />
                <!--<Button Grid.Column="6" Grid.Row="0"
                        HorizontalAlignment="Right"
                        Style="{StaticResource commandButton}"
                        Content="Generate Report"
                        Tag="{StaticResource color2}"
                        Command="{Binding LoadReportResults}">
                    <Button.Visibility>
                        <Binding Path="GenerateReportButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                    </Button.Visibility>
                </Button>-->
            </Grid>
            <Grid Grid.Row="1" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button 
                    HorizontalAlignment="Stretch"
                    Content="Download Full Summary" 
                    Style="{StaticResource commandButton}"
                    Click="DownloadFullReportButton_Click" 
                    Tag="{StaticResource color6}">
                    <Button.Visibility>
                        <Binding Path="DownloadButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                    </Button.Visibility>
                </Button>
                <Button 
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    Content="Download Medical Summary" 
                    Style="{StaticResource commandButton}"
                    Click="DownloadMedicalReportButton_Click" 
                    Tag="{StaticResource color11}">
                    <Button.Visibility>
                        <Binding Path="DownloadButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                    </Button.Visibility>
                </Button>
            </Grid>
            <Border Grid.Row="2" Style="{StaticResource TableBorderStyle}">
                <DataGrid
                        Name="SummaryGridMed"
                        CanUserAddRows="False"
                        Style="{StaticResource tableGrid}"
                        ItemsSource="{Binding MedicalSummaryList}"
                        IsReadOnly="true"
                        SelectionMode="Single"
                        AutoGenerateColumns="False"
                        RowDetailsVisibilityMode="Visible">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="40" Header="Id" Binding="{Binding Id}" />
                        <DataGridTextColumn Width="100" Header="Chit Number" Binding="{Binding ChitNumber}" />
                        <DataGridTextColumn Width="140" Header="Admit Date" Binding="{Binding AdmitDate}" />
                        <DataGridTextColumn Header="OPD Charge" Binding="{Binding OPDCharge}" />
                        <DataGridTextColumn Width="100" Header="Pharmacy Bill" Binding="{Binding PharmacyBill}" />
                        <DataGridTextColumn Header="Consultant Fee" Binding="{Binding ConsultantFee}" />
                        <DataGridTextColumn Header="Other Charges" Binding="{Binding OtherCharges}" />
                        <DataGridTextColumn Header="Total Commissions" Binding="{Binding TotalCommisions}"/>
                        <DataGridTextColumn Header="Total Bill" Binding="{Binding TotalBill}" />
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource DataGridHeaderStyle1}"/>
                    </DataGrid.Resources>
                </DataGrid>
            </Border>
            <Grid Grid.Row="2">
                <TextBlock x:Name="NoResultMed" Margin="100" HorizontalAlignment="Center" Text="No Results Found!" Visibility="{Binding NoResultsMed}"/>
            </Grid>
            <Grid Grid.Row="3">
                <TextBlock x:Name="TotalBillTxt" Margin="20 0" FontSize="18" VerticalAlignment="Bottom" FontWeight="Black" HorizontalAlignment="Right" Text="{Binding SumOfTotalMed}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
