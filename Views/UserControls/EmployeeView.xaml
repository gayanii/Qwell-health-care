<UserControl x:Class="QWellApp.Views.UserControls.EmployeeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QWellApp.Views.UserControls"
             xmlns:uc="clr-namespace:QWellApp.UserControls"
             xmlns:viewModel="clr-namespace:QWellApp.ViewModels"
             xmlns:converter="clr-namespace:QWellApp.Helpers"
             MouseDown="Window_MouseDown"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             xmlns:faicon="http://schemas.fontawesome.io/icons/"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewModel:EmployeeViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:StringToBoolConverter x:Key="StringToBoolConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid x:Name="EmployeeListView">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                VerticalAlignment="Top"
                Grid.Column="0"
                 >
                <fa:IconImage Icon="Search" Height="20" Width="20" Foreground="{StaticResource color12}"/>
                    <TextBox 
                    x:Name="SearchBox"
                    Text="{Binding SearchWord, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="13"
                    Height="36"
                    Width="300"
                    Background="Transparent"
                     FontWeight="Medium"
                     FontFamily="Montserrat"                            
                     Foreground="{StaticResource color12}"
                     CaretBrush="{StaticResource color12}"
                     BorderBrush="{StaticResource color12}"
                     BorderThickness="0,0,0,2"                             
                     VerticalContentAlignment="Center"
                     Margin="5,5,0,0"></TextBox>
            </StackPanel>
            <!--<Button Grid.Column="1"
                    Style="{StaticResource commandButton}"
                    Command="{Binding LoadSearchResults}" 
                    Content="Search"
                    Tag="{StaticResource color6}">
            </Button>-->
            <Button Grid.Column="2"
                x:Name="UpdateBtn"
                Style="{StaticResource commandButton}"
                Content="Update"
                Tag="{StaticResource color16}"
                Command="{Binding GetUserDetails}"
                Click="UpdateButtonClicked">
                <Button.Visibility>
                    <Binding Path="UpdateButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                </Button.Visibility>
            </Button>
            <Button Grid.Column="3"
                Style="{StaticResource commandButton}"
                Content="Create New"
                Tag="{StaticResource color2}"
                Click="CreateButtonClicked">
                <Button.Visibility>
                    <Binding Path="CreateButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                </Button.Visibility>
            </Button>
            <Button Grid.Column="4"
                Style="{StaticResource commandButton}"
                Content="Delete"
                Tag="{StaticResource color4}"
                Click="DeleteButtonClicked">
                <Button.Visibility>
                        <Binding Path="DeleteButtonVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                </Button.Visibility>
            </Button>
        </Grid>
        <Border Grid.Row="1"
            Background="{StaticResource panelActiveColor}"
            CornerRadius="10" 
            Padding="5"
            Margin="0 10">
            <DataGrid
                  Name="EmployeeGrid"
                  CanUserAddRows="False"
                  Style="{StaticResource tableGrid}"
                  ItemsSource="{Binding UserList}"
                  IsReadOnly="true"
                  SelectionMode="Single"
                  SelectionChanged="rowChanged"
                  AutoGenerateColumns="True"
                  MouseDoubleClick="ViewDetails">
            </DataGrid>
        </Border>
        <Grid Grid.Row="1">
            <TextBlock x:Name="NoResult" Margin="100" HorizontalAlignment="Center" Text="No Results Found!" Visibility="{Binding NoResults}"/>
        </Grid>
            <!-- Delete Popup -->
            <Popup Grid.Row="1" Name="deleteConfirmationPopup" IsOpen="False" Placement="Center" AllowsTransparency="True">
                <Border BorderBrush="{StaticResource color19}" CornerRadius="10" BorderThickness="2" Background="{StaticResource color11}" Padding="40 20">
                    <StackPanel>
                        <TextBlock x:Name="DeletePopupText" Text="" Style="{StaticResource NormalText}" HorizontalAlignment="Center" Margin="10"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <Button Content="No" Width="80" Margin="5" Style="{StaticResource buttonMainRed}" Click="NoButton_Click"/>
                            <Button Content="Yes" Width="80" Margin="5" Style="{StaticResource buttonMainGreen}" Click="YesButton_Click" Command="{Binding DeleteCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Popup>
        </Grid>

    <!--Update View-->
    <Grid x:Name="updateView">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.Visibility>
                <Binding Path="UpdateGridVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
        </Grid.Visibility>


            <!--Left Section-->
            <Border Background="{StaticResource color8}" Padding="10" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0" Margin="-80 -95">
                        <Button Style="{StaticResource iconButton}" Tag="{StaticResource color18}" Command="{Binding BackToListCommand}">
                            <fa:IconImage Icon="ArrowLeft" Height="30" Width="25" Style="{StaticResource iconButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Row="0" Text="First Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="30 0 0 10" Text="{Binding FirstNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="Last Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Margin="30 0 0 10" Text="{Binding LastNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Username *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Margin="30 0 0 10" Text="{Binding UsernameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="Email Address *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Margin="30 0 0 10" Text="{Binding EmailErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Employee Type" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="10" Text="Employee Role" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="11" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="FirstName" Grid.Column="1" Grid.Row="0" Hint="Enter first name" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="LastName" Grid.Column="1" Grid.Row="2" Hint="Enter last name" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="Username" Grid.Column="1" Grid.Row="4" Hint="Enter username" Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="Email" Grid.Column="1" Grid.Row="6" Hint="KarimDoe@email.com" Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                    <ComboBox x:Name="Type" Grid.Column="1" Grid.Row="8" ItemsSource="{Binding EmployeeTypeList}" Text="{Binding EmployeeType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686"/>
                    <ComboBox x:Name="Role" Grid.Column="1" Grid.Row="10" ItemsSource="{Binding RoleList}" DisplayMemberPath="Value" SelectedValuePath="Key" Text="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686" />

                </Grid>
            </Border>

            <!--Right Section-->
            <Border Grid.Column="1" Padding="10" Margin="0" Background="{StaticResource color8}" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Gender *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="60 0 0 10" Text="{Binding GenderErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="NIC" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Mobile Number *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Text="{Binding MobileNumErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="Telephone" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Status" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="NIC" Grid.Column="1" Grid.Row="2" Hint="Enter NIC" IsTabStop="False" Text="{Binding NIC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="MobileNum" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox" Hint="Enter mobile number" Text="{Binding Mobile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="Telephone" Grid.Column="1" Grid.Row="6" Hint="Enter landline number" Text="{Binding Telephone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ComboBox x:Name="Status" Grid.Column="1" Grid.Row="8" ItemsSource="{Binding StatusList}" Text="{Binding EmployeeStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686"/>
                    
                    <StackPanel Orientation="Horizontal" Width="160" Grid.Column="1" Grid.Row="0" Margin="0 10">
                        <RadioButton x:Name="Male" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Male}" Margin="5" Content="Male" />
                        <RadioButton x:Name="Female" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender,  Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Female}" Margin="5" Content="Female" />
                    </StackPanel>

                    <Grid Grid.Column="1" Grid.Row="14" Margin="0 40 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Style="{StaticResource cancelButton}" Command="{Binding ResetCommand}" GotFocus="genderGotFocus" Margin="0 0 10 0" Content="Reset" />
                        <Button Grid.Column="1" Style="{StaticResource mainButton}" GotFocus="genderGotFocus" Click="Update_Click" Width="120" Margin="10 0 0 0" Content="Update" Command="{Binding UpdateUserCommand}"/>

                        <Grid.Visibility>
                            <Binding Path="ResetUpdateButtonsVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
                        </Grid.Visibility>
                    </Grid>

            </Grid>
        </Border>

        </Grid>
        
        <!--Create View-->
        <Grid x:Name="createView">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.Visibility>
                <Binding Path="CreateGridVisibility" Mode="TwoWay" Converter="{StaticResource BoolToVisibilityConverter}"/>
            </Grid.Visibility>

            <!--Left Section-->
            <Border Background="{StaticResource color8}" Padding="10" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Grid.Column="0" Margin="-80 -95">
                        <Button Style="{StaticResource iconButton}" Tag="{StaticResource color18}" Command="{Binding BackToListCommand}">
                            <fa:IconImage Icon="ArrowLeft" Height="30" Width="25" Style="{StaticResource iconButtonIcon}"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Row="0" Text="First Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="30 0 0 10" Text="{Binding FirstNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="Last Name *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Margin="30 0 0 10" Text="{Binding LastNameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Username *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Text="{Binding UsernameErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="Email Address *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Margin="30 0 0 10" Text="{Binding EmailErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Employee Type" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="10" Text="Employee Role" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="11" Text="" Style="{StaticResource textError}" />

                    <uc:TextBoxUserControl x:Name="FirstNameCreate" Grid.Column="1" Grid.Row="0" Hint="Enter first name" Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="LastNameCreate" Grid.Column="1" Grid.Row="2" Hint="Enter last name" Text="{Binding LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="UsernameCreate" Grid.Column="1" Grid.Row="4" Hint="Enter username" Text="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="EmailCreate" Grid.Column="1" Grid.Row="6" Hint="KarimDoe@email.com" Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                    <ComboBox x:Name="TypeCreate" Grid.Column="1" Grid.Row="8" ItemsSource="{Binding EmployeeTypeList}" Text="{Binding EmployeeType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686"/>
                    <ComboBox x:Name="RoleCreate" Grid.Column="1" Grid.Row="10" ItemsSource="{Binding RoleList}" DisplayMemberPath="Value" SelectedValuePath="Key" Text="{Binding Role, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="10 0" Width="160" VerticalAlignment="Center" Foreground="#868686" />

                </Grid>
            </Border>

            <!--Right Section-->
            <Border Grid.Column="1" Padding="10" MouseDown="Border_MouseDown" Background="{StaticResource color8}" CornerRadius="10" BorderThickness="2" BorderBrush="{StaticResource panelActiveColor}">

                <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Gender *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="1" Margin="60 0 0 10"  Text="{Binding GenderErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="2" Text="NIC" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="3" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="4" Text="Mobile Number *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="5" Text="{Binding MobileNumErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="6" Text="Telephone" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="7" Text="" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="8" Text="Password *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="9" Text="{Binding PasswordErrorMessage}" Style="{StaticResource textError}" />
                    <TextBlock Grid.Row="10" Text="Confirm Password *" Style="{StaticResource text}"/>
                    <TextBlock Grid.Row="11" Text="{Binding ConfirmPasswordErrorMessage}" Style="{StaticResource textError}" />


                    <uc:TextBoxUserControl x:Name="NICCreate" Grid.Column="1" Grid.Row="2" Hint="Enter NIC" IsTabStop="False" Text="{Binding NIC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="MobileNumCreate" Grid.Column="1" Grid.Row="4" PreviewTextInput="NumberValidationTextBox" Hint="Enter mobile number" Text="{Binding Mobile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:TextBoxUserControl x:Name="TelephoneCreate" Grid.Column="1" Grid.Row="6" Hint="Enter landline number" Text="{Binding Telephone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <uc:PasswordUserControl x:Name="PasswordCreate" Grid.Column="1" Grid.Row="8" Width="180" Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <!--<PasswordBox x:Name="PasswordCreate" Margin="10 0" Grid.Column="1" Grid.Row="12" Width="160"/>-->
                    <uc:PasswordUserControl x:Name="ConfirmPassword" Grid.Column="1" Grid.Row="10" Width="180" Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Orientation="Horizontal" Width="160" Grid.Column="1" Grid.Row="0" Margin="0 10">
                        <RadioButton x:Name="MaleCreate" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Male}" Margin="5" Content="Male" />
                        <RadioButton x:Name="FemaleCreate" Foreground="{StaticResource color23}" FontWeight="Bold" IsChecked="{Binding Path=Gender,  Mode=TwoWay, Converter={StaticResource StringToBoolConverter}, ConverterParameter=Female}" Margin="5" Content="Female" />
                    </StackPanel>

                    <Grid Grid.Column="1" Grid.Row="16" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Style="{StaticResource cancelButton}" Command="{Binding CancelCommand}" Click="Cancel_Click" Margin="0 0 10 0" Content="Cancel" />

                        <Button Grid.Column="1" Style="{StaticResource mainButton}" Click="Update_Click" Width="120" Margin="10 0 0 0" Content="Create" Command="{Binding CreateUserCommand}"/>
                    </Grid>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</UserControl>
